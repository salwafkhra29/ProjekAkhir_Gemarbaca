<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Data Buku"
        android:textSize="14pt"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul buku"
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/et_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan judul"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang buku"
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/et_tentangbuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan tentang buku" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi buku"
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/et_isi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan isi buku"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah"/>
</LinearLayout>